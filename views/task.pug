extends layouts/master.pug

block content
    h1 Tasks
    h2 Create Task
    form(action="/task", method="POST")
        fieldset
            label(for="title") Title: &nbsp
            input(type="text", name="title")
            br

            label(for="descr") Description: &nbsp
            input(type="text", name="descr")
            br

            label(for="descr") Role: &nbsp
            select(type="text", name="group_type") #[br]
                option(value="A") Animal
                option(value="S") Serf
                option(value="K") Knight
                option(value="L") Lord
                option(value="Q") Queen
            br

            label(for="expires") Expires: &nbsp
            input(type="datetime-local", name="expires")
            br

        input(type="submit", value="submit")
    hr
    h2 Existing tasks
    table(border="1")
        tr
            th title
            th description
            th type
            th expires
        each task in tasks
            tr
                td= task.title
                td= task.descr
                td= task.group_type
                td= task.expires